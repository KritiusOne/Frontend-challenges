---
import Avatar from "./Avatar.astro"
const styles = Astro.props.class
const { name, imgAvatar, paragraph, title, description } = Astro.props
---
<article class={`p-4 flex flex-col gap-4 rounded-md ${styles}`} >
  <Avatar name={name} img={imgAvatar} description={description} />
  <h2 class="font-extrabold text-pretty flex text-left text-[13px] items-start">
    { title }
  </h2>
  <p class="text-sm">
    { paragraph }
  </p>

</article>