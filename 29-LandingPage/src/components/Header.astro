---
import Logo from "./icons/Logo.astro";
import Menu from "./icons/Menu.astro";


---
<header class="w-full min-h-32 flex flex-col sm:flex-row justify-evenly items-center px-8 py-3 sm:justify-between" id="Header">
  <div class="flex flex-row gap-28">
    <section class="sm:flex sm:justify-center sm:items-center">
      <Logo colorBox="#BDBAFA" colorLetters="#000" />
    </section>

    <button class="sm:hidden" id="menuH">
      <Menu />
    </button>
  </div>
  <nav id="Nav" class="!hidden w-1/3 h-full text-primary-vDarkBlue sm:!flex">
    <ul class=" w-full h-full flex flex-col sm:flex-row justify-center items-center gap-3">
      <li>Features</li>
      <li>Team</li>
      <li class="flex-shrink">Sing In</li>
    </ul>
  </nav>
</header>
<script>
  const menuH = document.querySelector("#menuH")
  const header = document.querySelector("#Header")
  const nav = document.querySelector("#Nav")
  menuH.addEventListener("click",(e)=>{
    nav.classList.toggle("!hidden")
    nav.classList.toggle("!flex")
  })
</script>